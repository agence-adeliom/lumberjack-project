{% extends "layout.html.twig" %}

{% block content %}
<div class="container mx-auto">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <section class="article-content">
            <h1 class="text-3xl mb-8">{{post.title}}</h1>
            <div class="article-body">
                {{post.content}}
            </div>
        </section>
    </article>
</div>
{% endblock %}
