{% extends "layout.html.twig" %}

{% block content %}
<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
    <section class="article-content">
        <div class="container mx-auto">
            <h1 class="text-3xl mb-8">{{post.title}}</h1>
        </div>
        <div class="article-body">
            {{post.content}}
        </div>
    </section>
</article>
{% endblock %}
