{% embed "blocks/block.html.twig" with {
    background: 'none',
    className: 'dark bg-red-200 sticky top-0 z-[100]',
    padding: 'none'
}%}
    {% block content %}
    {% import "components/action/buttons/btn.html.twig" as button %}
    {% import "components/typography/typography.html.twig" as typography %}
        <div class="flex gap-6 items-center justify-between js-sticky-menu">
            <div class="relative py-10 overflow-auto">
                {# Effet de voile dégradé #}
                <div class="bg-gradient-to-r pointer-events-none from-transparent to-red-200 w-6 h-full absolute top-0 right-0"></div>
                <div class="overflow-auto disable-scrollbar flex gap-6 ">
                    {% for item in fields.sticky_menu %}
                        <div class="flex gap-6 items-center rounded js-sticky-menu-item {{ loop.last ? 'mr-6 md:mr-10' }}">
                            <a href="#{{ item.anchor }}" class="whitespace-nowrap transition-all bg-red-300 is-active:bg-red-500">
                                {{ typography.text({
                                    content: item.title,
                                    className: '',
                                }) }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>

            {{ button.single({
                fields,
                className: 'w-fit flex-shrink-0'
            }) }}
    </div>
    {% endblock %}
{% endembed %}
