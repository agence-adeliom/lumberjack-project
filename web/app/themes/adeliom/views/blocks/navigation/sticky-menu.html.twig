{% embed "blocks/block.html.twig" with {
    background: 'none',
    className: 'dark bg-red-200 sticky top-0 z-[100000]',
    padding: 'none'
}%}
    {% block content %}
    {% import "components/action/buttons/btn.html.twig" as button %}
    {% import "components/typography/typography.html.twig" as typography %}
        <div class="flex gap-6 items-center justify-between js-sticky-menu relative ">
            <div class="py-4 pr-10 lg:py-10 w-full lg:max-w-[80%] relative">
                {# Effet de voile dégradé #}
                <div class="bg-gradient-to-r pointer-events-none from-transparent to-red-200 w-14 z-10 h-full absolute top-0 right-0"></div>
                {# Slider d'item #}
                <div class="swiper !h-fit !static">
                    <div class="swiper-wrapper">
                        {% for item in fields.sticky_menu %}
                            <div class="!w-fit !h-fit flex swiper-slide gap-6 items-center rounded js-sticky-menu-item {{ loop.last ? 'mr-6 md:mr-0' }}"  data-slider-index="{{ loop.index0 }}">
                                <a href="#{{ item.anchor }}" class="whitespace-nowrap transition-all bg-red-300 is-active:bg-red-500">
                                    {{ typography.text({
                                        content: item.title,
                                        className: '',
                                    }) }}
                                </a>
                            </div>
                        {% endfor %}
                    </div>

                    {# Chevron slider #}
                    {% set sliderBtnCLass = " -translate-y-1/2 z-10 text-red-500 absolute top-1/2" %}
                    <div class="js-swiper-prev left-0 {{ sliderBtnCLass }}"><-</div>
                    <div class="js-swiper-next right-0 {{ sliderBtnCLass }}">-></div>
                </div>
            </div>
            <div class="w-full py-4 left-0 lg:w-fit flex-shrink-0 bg-red-300 fixed bottom-0 lg:static lg:bg-none">
                {{ button.single({
                    fields,
                    className: ''
                }) }}
            </div>
    </div>
    {% endblock %}
{% endembed %}

<style>
    .swiper-button-disabled {
        display: none;
    }
</style>
