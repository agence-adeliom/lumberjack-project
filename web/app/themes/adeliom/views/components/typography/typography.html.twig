{#
#############################
#############################
    Heading
#############################
#############################
#}
{% macro heading(obj) %}

    {% set class = {
        base: "",
        default: {
            size: "1",
            color: "black"
        },
        size: {
            1 : "heading heading-1",
            2 : "heading heading-2",
            3 : "heading heading-3",
            4 : "heading heading-4",
            5 : "heading heading-5",
            6 : "heading heading-6",
            headline: "headline",
        },
        color: {
            current: "text-current",
            white: "text-white",
            black: "text-black"
        }
    }|mergeClass({color: obj.color, size: obj.size}, obj.className) %}

    {% set title = obj.content ?? obj.fields.title %}

    {% set tag = obj.tag ?? title.tag ?? "div" %}
    {% set content = title.content ?? title %}

    {% set ariaHeading = tag == "div" ? true : false %}

    {% if content %}
        <{{ tag }} class="{{ class }}" {% if ariaHeading %}role="heading" aria-level="{{ obj.size }}"{% endif %}>
        {{ content }}
        </{{ tag }}>
    {% endif %}

{% endmacro %}


{#
#############################
#############################
    Text
#############################
#############################
#}
{% macro text(obj) %}

    {% set class = {
        base: '',
        default: {
            size: "base",
            color: "black"
        },
        size: {
            xs : "text-xs",
            sm : "text-sm",
            base : "text-base",
            lg : "text-lg",
            xl : "text-xl"
        },
        weight: {
            bold: "font-bold",
            medium: "font-medium",
            normal: "font-normal"
        },
        color: {
            white: "text-white",
            black: "text-black dark:text-white"
        }
    }|mergeClass({
        size: obj.size,
        weight: obj.weight,
        color: obj.color
    }, obj.className) %}

    {% set content = obj.content ?? obj.fields.wysiwyg %}

    {% if not content and obj.fields.text %}
        {% set content = obj.fields.text %}
    {% endif %}

    {% if content %}
        {% if obj.wysiwyg or (content matches '/<\s*[a-z][^>]*>/i') %}
            <div class="{{ class }}">
                {{ content|raw }}
            </div>
        {% else %}
            <p class="{{ class }}">
                {{ content }}
            </p>
        {% endif %}
    {% endif %}

{% endmacro %}


{#
#############################
#############################
    Icon
#############################
#############################
#}
{% macro icon(obj) %}

    {% set class = {
        base: "fa-fw",
        default: {
            variant: "regular"
        },
        variant: {
            solid: "fas",
            regular: "far",
            light: "fal",
            duotone: "fad",
            brand: "fab",
            kit: "fak"
        },
        size: {
            xs: 'text-xs',
            sm: 'text-sm',
            lg: 'text-lg',
            xl: 'text-xl',
        }
    }|mergeClass({size: obj.size}, obj.className) %}

    <i class="{{ class }} fa-{{ obj.icon }}"></i>

{% endmacro %}


{#
#############################
#############################
    Text group
#############################
#############################
#}
{% macro textGroup(obj) %}

    {% set class = {
        base: "wysiwyg",
        default: {},
    }|mergeClass({}, obj.className) %}

    <div class="{{ class }}">

        {# Headline #}
        {% if obj.fields.headline or obj.headline %}

            {% set headline = {
                content: obj.fields.headline,
                size: "headline",
                className: "mb-2"
            }|merge(obj.headline ?? {}) %}

            {{ _self.heading(headline) }}

        {% endif %}


        {# Title #}
        {% if obj.fields.title or obj.title %}

            {% set title = {
                content: obj.fields.title,
            }|merge(obj.title ?? {}) %}

            {{ _self.heading(title) }}

        {% endif %}


        {# Marge selon le level du titre #}
        {% set paragraphMargin = {
            1: "mt-10",
            2: "mt-10",
            3: "mt-10",
            4: "mt-5",
            5: "mt-4",
        } %}


        {# Wysiwyg #}
        {% if obj.fields.wysiwyg or obj.wysiwyg %}

            {% set wysiwyg = {
                content: obj.fields.wysiwyg,
                size: "base",
                className: paragraphMargin[title.size]
            }|merge(obj.wysiwyg ?? {}) %}

            {{ _self.text(wysiwyg) }}

        {% endif %}


        {% if obj.fields.button or obj.button or obj.fields.buttons or obj.buttons %}

            {% import "components/action/button/btn.html.twig" as btn %}

            {% set className = "mt-6" %}

            {# Button #}
            {% if obj.fields.button or obj.button %}

                {% set button = {
                    content: obj.fields.button,
                    className
                }|merge(obj.button ?? {}) %}

                {{ btn.single(button) }}

            {% endif %}

            {# Buttons Group #}
            {% if obj.fields.buttons or obj.buttons %}

                {% set buttons = {
                    content: obj.fields.buttons,
                    className
                }|merge(obj.buttons ?? {}) %}

                {{ btn.group(buttons) }}

            {% endif %}

        {% endif %}

    </div>

{% endmacro %}
