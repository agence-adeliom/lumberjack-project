{% set class = "aspect-video h-[50vh]" %}

{% if video.is_url %}
    <iframe src="https://www.youtube.com/embed/{{  video.url }}"  allowfullscreen class="{{ class }} frame"></iframe>
{% else %}
    <video controls class="{{ class }}">
        <source src="{{ video.video }}" type="video/mp4">
        Sorry, your browser doesn't support embedded videos.
    </video>
{% endif %}
