{
    "scripts": {
        "prepare": "husky install",
        "theme": "cd web/app/themes/adeliom && npm",
        "eslint": "eslint --ext .jsx,.js,.tsx,.ts 'web/app/themes/adeliom/assets/'",
        "stylelint": "stylelint --config ./.stylelintrc --allow-empty-input 'web/app/themes/adeliom/assets/**/*.{scss,pcss,css}'",
        "test": "npm run eslint"
    },
    "dependencies": {
        "alpinejs": "^3.12.3",
        "husky": "^8.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "commitizen": "^4.2.5",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.23.0",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "stylelint": "^14.11.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^28.0.0",
        "stylelint-prettier": "^2.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
